<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4-desktop is-6-tablet">
        <div class="box loginform">
          <h1 class="title has-text-centered">Forgot your password?</h1>

          <% if flash[:alert] %>
            <div class="notification is-danger is-light">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <%= form_with url: passwords_path do |form| %>
            <div class="field">
              <%= form.label :username, class: "label" %>
              <div class="control has-icons-left">
                <%= form.text_field :username, required: true, autofocus: true,
                                    autocomplete: "username", placeholder: "Enter your username",
                                    value: params[:username], class: "input" %>
                <span class="icon is-small is-left">
                  <i class="fas fa-user"></i>
                </span>
              </div>
            </div>

            <div class="field mt-5">
              <%= form.submit "Email reset instructions", class: "button is-primary is-fullwidth" %>
            </div>
          <% end %>

          <hr>

          <div class="has-text-centered">
            <%= link_to "Back to Login", new_session_path, class: "is-size-7" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
