<% content_for :content do %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Welcome to SmartRails. Please log in:</h5>
      <%= bootstrap_form_tag url: '/login' do |f| %>
        <%= f.text_field :username, placeholder: 'Your username' %>
        <%= f.password_field :password, placeholder: 'Your password' %>
        <%= f.submit "Login"%>
      <%end%>
    </div>
    <% if @errors %>
      <div class="container">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>Error</strong> Unknown user or wrong password.
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    <% end %>
  </div>
<% end %>


