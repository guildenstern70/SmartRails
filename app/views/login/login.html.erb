<%= stylesheet_link_tag "login", "data-turbo-track": "reload" %>

<div class="d-flex justify-content-center text-center">
  <div class="loginform">

    <%= image_tag("ruby-on-rails-icon.svg", size: "72x72", alt: "Rails Logo") %>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>


    <%= form_with url: "/login", method: :post do |form| %>

      <div class="form-floating mb-2">
        <%= form.text_field :username, :class => "form-control", placeholder: "placeholder text"  %>
        <label for="username">Username</label>
      </div>

      <div class="form-floating">
        <%= form.password_field :password, :class => "form-control", placeholder: "placeholder text"  %>
        <label for="password">Password</label>
      </div>

      <div class="checkbox my-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <%= form.submit "Sign In", :class => "w-100 btn btn-lg btn-primary" %>
      <p class="mt-5 mb-3 text-muted">Try with <i>guest</i>/<i>guest</i></p>
    <% end %>

    <% if @errors %>
      <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <div>
          Unknown user or wrong password
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

  </div>

</div>



